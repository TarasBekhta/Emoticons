<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLayout"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_marginRight="@dimen/item_padding"
        android:layout_marginTop="@dimen/item_top_padding"
        android:layout_marginBottom="@dimen/item_top_padding"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/rounded_border_accent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emoticonTextView"
            android:text="Test"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/item_padding"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favoriteImageView"
            android:src="@drawable/ic_favorite_dark"
            android:layout_marginRight="@dimen/item_padding"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>